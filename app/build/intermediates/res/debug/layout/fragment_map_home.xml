<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="false" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <ImageView
        android:id="@+id/tv_maphome_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_bottom_bar"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/map_location" />

    <ImageView
        android:id="@+id/tv_maphome_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_maphome_type"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1px"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/map_home_convert" />

    <ImageView
        android:id="@+id/tv_maphome_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/common_actionbar"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/map_home_type" />

    <ImageView
        android:id="@+id/tv_maphome_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_maphome_small"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/tv_maphome_small"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="6dp"
        android:src="@drawable/map_zoom_in" />

    <ImageView
        android:id="@+id/tv_maphome_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_bottom_bar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1px"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="6dp"
        android:src="@drawable/map_zoom_out" />

    <FrameLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottombar_height"
        android:layout_alignParentBottom="true"
        android:visibility="visible" >

        <include layout="@layout/layout_main_bottom_bar" />
    </FrameLayout>
    <!-- 显示页面 -->

</RelativeLayout><!-- From: file:/Users/baidu/MyStudys/AndroidStudioProjects/Wondermap/app/src/main/res/layout/fragment_map_home.xml -->